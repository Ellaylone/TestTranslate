<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Translation text area -->
    <style name="TranslateTextArea">
        <item name="android:background">@drawable/text_area_border_unfocus</item>
        <item name="android:gravity">top|left</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">6</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingLeft">@dimen/source_text_h_padding</item>
        <item name="android:paddingRight">@dimen/source_text_h_padding</item>
        <item name="android:paddingTop">@dimen/source_text_v_padding</item>
        <item name="android:paddingBottom">@dimen/source_text_v_padding</item>
    </style>

    <!-- Translation text area (landscape) -->
    <style name="TranslateTextAreaLand" parent="TranslateTextArea">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Translation result -->
    <style name="TranslateResult">
        <item name="android:textSize">@dimen/translate_result_text_size</item>
    </style>

    <!-- Translation result (landscape) -->
    <style name="TranslateResultLand" parent="TranslateResult">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Translation icon -->
    <style name="TranslateResultIcon">
        <item name="android:width">@dimen/translate_result_icon_height</item>
        <item name="android:height">@dimen/translate_result_icon_width</item>
        <item name="android:gravity">center</item>
    </style>
</resources>