<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">@dimen/nav_bar_tab_max_width</item>
        <item name="tabIndicatorHeight">@dimen/nav_bar_tab_indicator_height</item>
        <item name="android:layout_height">@dimen/nav_bar_tab_height</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- Category tab border style -->
    <style name="CategoryTabBorder">
        <item name="android:background">@color/lightGray</item>
    </style>

    <!-- Languages header -->
    <style name="LangsHeader">
        <item name="android:isScrollContainer">false</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="LangsHeaderIcon">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:src">@drawable/double_arrow</item>
    </style>

    <style name="LangsHeaderLang">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingLeft">@dimen/langs_header_lang_h_padding</item>
        <item name="android:paddingRight">@dimen/langs_header_lang_h_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/langs_header_text_size</item>
    </style>

    <!-- Translation text area -->
    <style name="TranslateTextArea">
        <item name="android:background">@drawable/border</item>
        <item name="android:gravity">top|left</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">6</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_margin">@dimen/source_text_area_margin</item>
    </style>

</resources>