<resources>
    <!-- Lang list -->
    <!-- Lang list item title -->
    <style name="LangListItemTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Lang list checkmark icon style -->
    <style name="LangListItemCheckmarkIcon">
        <item name="android:src">@drawable/checkmark</item>
    </style>

    <!-- Lang list text_area_border_focus style -->
    <style name="LangListBorder">
        <item name="android:background">@color/lightGray</item>
    </style>
</resources>