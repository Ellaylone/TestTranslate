<resources>
    <!-- Style for tabs -->
    <style name="Tabs" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabIndicatorHeight">@dimen/nav_bar_tab_indicator_height</item>
    </style>

    <!-- Styles for history tab layout -->
    <!-- Style for a tab -->
    <style name="HistoryTab" parent="Tabs">
        <item name="tabGravity">center</item>
        <item name="tabPaddingStart">@dimen/tool_bar_tab_h_padding</item>
        <item name="tabPaddingEnd">@dimen/tool_bar_tab_h_padding</item>
        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/HistoryTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a tab -->
    <style name="HistoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Styles for category tab layout -->
    <!-- Style for a tab -->
    <style name="CategoryTab" parent="Tabs">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">@dimen/nav_bar_tab_max_width</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- Category tab text_area_border_focus style -->
    <style name="CategoryTabBorder">
        <item name="android:background">@color/lightGray</item>
    </style>
</resources>