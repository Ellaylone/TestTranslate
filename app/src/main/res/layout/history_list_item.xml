<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lang_list_item_height">

    <TextView
        android:id="@+id/source_text"
        style="@style/LangListItemTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/lang_list_item_h_padding"
        android:layout_marginStart="@dimen/lang_list_item_h_padding"
        tools:text="Hello" />

    <TextView
        android:id="@+id/is_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text="F"/>

    <TextView
        android:id="@+id/translation_langs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        tools:text="en - ru"/>

    <View
        style="@style/LangListBorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lang_list_border_height"
        android:layout_alignParentBottom="true" />

</RelativeLayout>