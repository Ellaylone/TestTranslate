<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    style="@style/ToolBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tool_bar_height">

    <ImageButton
        android:id="@+id/switch_langs"
        style="@style/ToolBarSwitchIcon"
        android:layout_width="@dimen/tool_bar_icon_width"
        android:layout_height="@dimen/tool_bar_icon_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/source_lang"
        style="@style/ToolBarTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/switch_langs"
        android:layout_toStartOf="@id/switch_langs"
        tools:text="Английский" />

    <TextView
        android:id="@+id/target_lang"
        style="@style/ToolBarTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/switch_langs"
        android:layout_toRightOf="@id/switch_langs"
        tools:text="Японский" />

</RelativeLayout>
