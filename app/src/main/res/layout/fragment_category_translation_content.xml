<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:isScrollContainer="false"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/ib_translate_switch_langs"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_translate_source_lang"
            android:layout_toLeftOf="@+id/ib_translate_switch_langs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            tools:text="Английский"
            android:text="Английский"
            android:textSize="18sp"
            android:ellipsize="end"
            android:textColor="#000000"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            tools:ignore="RelativeOverlap"
            />

        <TextView
            android:id="@+id/tv_translate_target_lang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:layout_toRightOf="@+id/ib_translate_switch_langs"
            tools:text="Японский"
            android:text="Японский"
            android:textSize="18sp"
            android:ellipsize="end"
            android:textColor="#000000"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translation"/>

</LinearLayout>
